<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#e6e6e6" />

    <RelativeLayout
        android:id="@+id/combo_title_container"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/gray_white_01">

        <ImageView
            android:id="@+id/combo_arrow_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="5dp"
            android:scaleType="center"
            android:src="@drawable/arrow_bottom_black" 
            android:layout_alignParentRight="true"/>
        <TextView
            android:id="@+id/combo_num_text_01"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="15dp"
            android:ellipsize="end"
            android:gravity="center"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:singleLine="true"
            android:background="@drawable/shuliang_image"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/combo_nick_name_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="40dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:layout_toLeftOf="@id/combo_arrow_image"
            android:layout_toRightOf="@id/combo_num_text_01"
            android:layout_alignParentLeft="true"
            android:singleLine="true"
            android:textColor="@color/orange"
            android:text="哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈"
            android:textSize="18sp" />
		
        
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#e6e6e6" /> 

    <com.lzh.yuanstrom.expandlist.CollapsableLinearLayout
        android:id="@+id/combo_products_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
    </com.lzh.yuanstrom.expandlist.CollapsableLinearLayout>

</LinearLayout>